<script type="text/javascript">
$(document).ready(function() {
		$('.hideInfo').hide();
		
		$('a.fx-showReceivers').click(function(){
			$("#" + $(this).attr('rel')).show();
            $(this).hide();            
			return false;
		});
});
</script>

